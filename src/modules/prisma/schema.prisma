model Course {
  id          BigInt             @id @default(autoincrement())
  status      Int                @default(0)
  uploading   Int                @default(0)
  title       String?            @default("")
  slug        String             @unique
  author_id   BigInt             @default(0)
  author_info Json
  price       Int?
  duration    String?
  excerpt     String?
  description Json?
  lang        String
  rating      Decimal?           @default(0.0)
  cdn_source  Int                @default(0)
  created_at  DateTime?
  media       Media[]
  collection  CollectionCourse[]

  @@map("courses")
}

model Media {
  id                    BigInt  @id @default(autoincrement())
  model_type            String
  model_id              BigInt
  uuid                  String
  collection_name       String
  file_name             String
  generated_conversions Json
  course                Course? @relation(fields: [model_id], references: [id])

  @@map("media")
}

model Collection {
  id        BigInt             @id @default(autoincrement())
  title     String
  hide_from Json
  courses   CollectionCourse[]

  @@map("collections")
}

model CollectionCourse {
  id            BigInt     @id @default(autoincrement())
  collection_id BigInt
  course_id     BigInt
  collection    Collection @relation(fields: [collection_id], references: [id])
  course        Course     @relation(fields: [course_id], references: [id])

  @@map("collection_course")
}
